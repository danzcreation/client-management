<div class="card">
  <h5 class="card-header">Users</h5>
  <div class="card-body">

    <div id="<%= dom_id @user %>">
      <div class="mb-3 row">
        <%= label_tag :email, "Email:", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= text_field_tag :email, @user.email, class: "form-control-plaintext", readonly: true %>
        </div>
      </div>
      <div class="mb-3 row">
        <%= label_tag :kind, "Type:", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= text_field_tag :kind, @user.kind.titleize, class: "form-control-plaintext", readonly: true %>
        </div>
      </div>
    </div>


    <div class="btn-toolbar">
      <%= link_to "Edit", edit_user_path(@user), class: "btn btn-primary" %>&nbsp;
      <%= button_to "Delete", @user, method: :delete, class: "btn btn-danger" %>
      <%= link_to "Back to list", users_path, class: "btn btn-link" %> 
    </div>
  </div>
</div>
