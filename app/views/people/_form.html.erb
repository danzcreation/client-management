<%= form_with(model: [person.organization, person]) do |form| %>
  <% if person.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
        <% person.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :email, class: "form-label" %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :phone, class: "form-label" %>
    <%= form.text_field :phone, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :avatar, class: "form-label" %>
    <%= form.file_field :avatar, direct_upload: true, class: "form-control" %>
    <% if person.avatar.attached? %>
      <%= image_tag person.avatar, class: "img-thumbnail", style: "max-width:200px" %>
      <%= form.hidden_field :avatar, value: person.avatar.signed_id %>
    <% end %>
  </div>

  <div>
    <%= form.submit nil, class: "btn btn-primary" %>
    <%= link_to "Back to list", person.organization, class: "btn btn-link" %> 
  </div>
<% end %>
